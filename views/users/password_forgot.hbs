<div class="container">
    <div id="passwordreset" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">{{title}}</div>
                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="/users/login">Sign In</a></div>
            </div>
            <div class="panel-body">
                <form id="signupform" class="form-horizontal" role="form" method="post" action="/users/password_forgot">
                    <div class="form-group">
                        <label for="email" class="col-md-3 control-label">Registered Email</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="email" placeholder="Enter your email address that you used to register">
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-signup" type="button" class="btn btn-info">Send</button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                We'll send you an email with a link to reset your password.
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>