<div id="container">
<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><strong>{{title}}</strong></h3>
    </div>
    <div class="panel-body">
      <form role="form" method="post" action="/users/login">
        <div class="form-group">
          <label for="email">Username or Email</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password <a href="/users/password_forgot">(forgot password)</a></label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-sm btn-info">Sign in</button>
      </form>
    </div>
  </div>
</div>
</div>
